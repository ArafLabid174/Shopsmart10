<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollViewPriceComparison"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <!-- Top row: Product Name + Heart icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvMainProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>

        <!-- Extended product title / description -->
        <TextView
            android:id="@+id/tvExtendedProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Heading: Price Comparison -->
        <TextView
            android:id="@+id/tvPriceComparisonHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Comparison"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <!-- Table for Price Comparison -->
        <TableLayout
            android:id="@+id/tableComparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:shrinkColumns="*"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle"
            android:layout_marginBottom="16dp">

        <!-- Table Header Row -->
        <TableRow
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_column="0"
                android:text="Product Name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="1"
                android:text="Vendor"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="2"
                android:text="Price"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="3"
                android:text="Rating"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_margin="4dp"/>
        </TableRow>

        <!-- Example Data Rows (Hard-coded) -->
        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Maui Shampoo"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="1"
                android:text="Amazon Inc"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="2"
                android:text="$1200"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="3"
                android:text="4.5 ⭐"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Maui Shampoo aloe vera edition"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="1"
                android:text="Alibaba Inc"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="2"
                android:text="$1,230"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="3"
                android:text="4.8 ⭐"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Maui Shampoo aloe vera edition"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="1"
                android:text="Ebay"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="2"
                android:text="$1,189"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="3"
                android:text="4.1 ⭐"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="0"
                android:text="Maui Shampoo aloe vera extract"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="1"
                android:text="Supreme shop"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="2"
                android:text="$1100"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>

            <TextView
                android:layout_column="3"
                android:text="4.3 ⭐"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_margin="4dp"/>
        </TableRow>
    </TableLayout>
    <include layout="@layout/activity_reviews" />
    <include layout="@layout/item_review" />


</LinearLayout>
    </ScrollView>
