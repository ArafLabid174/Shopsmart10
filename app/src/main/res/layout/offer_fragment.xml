<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offer_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- ScrollView to allow multiple offers to scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Label: "Mobile & Accessories" with rounded background -->
            <TextView
                android:id="@+id/tvCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Accessories"
                android:textColor="#004000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/bg_rounded_category"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Location Text -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Based on current location :\nSouth Nanango, Queensland, Australia"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"/>

            <!-- First Offer Image -->
            <ImageView
                android:id="@+id/ivOffer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/offer_1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp"/>

            <!-- Second Offer Image -->
            <ImageView
                android:id="@+id/ivOffer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/offer_2"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp"/>

            <!-- Third Offer Image -->


            <!-- Add more images here if needed for more offers -->

        </LinearLayout>
    </ScrollView>

</FrameLayout>
