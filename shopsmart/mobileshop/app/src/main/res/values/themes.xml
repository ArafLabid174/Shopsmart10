<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Application Theme -->
    <style name="Theme.MobileShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your default background, colorPrimary, etc. -->
        <item name="android:colorBackground">@color/background_main</item>
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorPrimaryVariant">@color/text_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/button_color</item>
        <item name="android:textColorPrimary">@color/dark_gray</item>

        <!-- Typography examples -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button Theme Example -->
    <style name="Widget.MobileShop.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- EditText / TextInputLayout Theme -->
    <style name="Widget.MobileShop.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <!-- Headline Theme Example -->
    <style name="TextAppearance.MobileShop.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Radio Button Theme Example -->
    <style name="Widget.MobileShop.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/text_primary</item>
    </style>


</resources>
