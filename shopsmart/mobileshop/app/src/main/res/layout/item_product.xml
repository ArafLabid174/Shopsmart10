<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp">

    <!-- Barcode icon -->
    <ImageView
        android:id="@+id/ivProductIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_barcode"
        android:contentDescription="@string/product_icon_desc"
        android:layout_marginEnd="8dp" />

    <!-- Product info: name and price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rubik's Cube"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
            
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Wish button -->
    <ImageButton
        android:id="@+id/btnWish"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_wish"
        android:contentDescription="@string/wish"
        android:background="?android:colorBackground"
        android:layout_marginEnd="8dp" />

    <!-- Delete button -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/delete"
        android:background="?android:colorBackground"
        android:layout_marginStart="8dp" />

</LinearLayout>
